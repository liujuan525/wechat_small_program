.container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width: 100%;
  height:460rpx;
}
.author-date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top:20rpx;
}
.avatar{
  height:64rpx;
  width: 64rpx;
  vertical-align: middle;
}
.author{
  font-size:30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color:#666;
}
.const-text{
  color:#999;
  margin-left: 20rpx;
}
.date{
  vertical-align: middle;
  color:#999;
  margin-left: 30rpx;
}
.title{
  font-size:36rpx;
  color:#4b556c;
  margin-left: 40rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
}
.tool{
  margin-top: 20rpx;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
.share-img{
  margin-left: 30rpx;
}
.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top:46rpx;
  margin:0 auto;
  z-index: -99;
}
.circle-img Image{
  width:90rpx;
  height: 90rpx;
}
.detail{
  color: #666;
  margin-left: 36rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  margin-left: -51rpx;
  left:50%;
  top:180rpx;
  opacity: 0.6;
}